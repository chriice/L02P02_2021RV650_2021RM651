@model List<ComentariosLibro>


<div class="container">
    <ul class="progressbar">
        <li>Autores</li>
        <li>Libros</li>
        <li >Comentarios existentes</li>
        <li class="active">Nuevo comentario</li>
    </ul>
    <br />
</div>
@if (Model.Any())
{
    <div class="row my-3 border border-gray rounded">
        <div class="col-6">
            <h2 class="text-primary">Autor: <span class="text-dark">@ViewBag.NombreAutor</span></h2>
        </div>
        <div class="col-6">
            <h2 class="text-primary">Libro: <span class="text-dark">@ViewBag.NombreLibro</span></h2>
        </div>
    </div>


    <div class="row border border-gray rounded">
        <div class="col-md-6">

            <table class="table">
                <thead>
                    <tr>
                        <th>Usuario</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var comentario in Model)
                    {
                        <tr>
                            <td>@comentario.Usuario</td>
                        </tr>
                        <tr>
                            <td>@comentario.Comentarios</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-6 text-center">
            <h3>Agregar un comentario</h3>
            <form asp-controller="ComentariosLibroes" asp-action="Create" method="post">
                <input type="hidden" name="IdLibro" value="@ViewBag.LibroId" />
                <div class="form-group">
                    <label for="Usuario">Usuario:</label>
                    <input type="text" name="Usuario" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="Comentarios">Comentarios:</label>
                    <textarea name="Comentarios" class="form-control" required placeholder="Comentario añadido con exito"></textarea>
                </div>
                <button type="submit" disabled class="btn btn-success my-1">Agregar Comentario</button>
            </form>
        </div>

    </div>
}
else
{
    <p>No hay comentarios para este libro.</p>
}